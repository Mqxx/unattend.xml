<component
  name="Microsoft-Windows-WinPE-Setup"
  processorArchitecture="amd64"
  publicKeyToken="31bf3856ad364e35"
  language="neutral"
  versionScope="nonSxS"
  xmlns:wcm="http://schemas.microsoft.com/WMIConfig/2002/State"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
  <!-- Controls setup behavior in WinPE, e.g., displaying setup screens or installation options -->
  <!-- Configures setup behavior for the WinPE phase -->
  <ImageSelection>
    <!-- Specifies settings for selecting the Windows image to install -->
    <WillShowUI>Never</WillShowUI>
    <!-- Controls whether the image selection UI is shown -->
    <InstallImage>
      <!-- Specifies the Windows image to install -->
      <ImageName>Windows 11 Pro</ImageName>
      <!-- Specifies the name of the image in the .wim file -->
      <ImageGroup>Windows</ImageGroup>
      <!-- Specifies the group name of the image in the .wim file -->
      <Filename>install.wim</Filename>
      <!-- Specifies the filename of the .wim file -->
    </InstallImage>
  </ImageSelection>
  <Display>
    <!-- Configures display settings for the WinPE setup UI -->
    <ColorDepth>32</ColorDepth>
    <!-- Specifies the color depth for the display -->
    <HorizontalResolution>1024</HorizontalResolution>
    <!-- Specifies the horizontal resolution for the display -->
    <VerticalResolution>768</VerticalResolution>
    <!-- Specifies the vertical resolution for the display -->
    <RefreshRate>60</RefreshRate>
    <!-- Specifies the refresh rate for the display -->
  </Display>
</component>
